public class Book {
    String title;
    String author;
    double price;

    // Parameterized constructor
    public Book(String title, String author, double price) {
        this.title = title;
        this.author = author;
        this.price = price;
    }

    // Method to display book info
    public void displayInfo() {
        System.out.println("Title: " + title);
        System.out.println("Author: " + author);
        System.out.println("Price: " + price);
    }

    public static void main(String[] args) {
        // Create Book objects with different values
        Book b1 = new Book("The Alchemist", "Paulo Coelho", 15.99);
        Book b2 = new Book("Clean Code", "Robert C. Martin", 32.50);

        b1.displayInfo();

        b2.displayInfo();
    }
}
